<h1>All cocktails</h1>

<% @cocktails.each do |cocktail| %>
  <li><%= cocktail.name  %> <%= link_to "Remove",
                             cocktail_path(cocktail), method: :delete,
                             data: { confirm: "Are you sure?" }  %></li>
<% end %>

